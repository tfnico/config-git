[user]
    name = Thomas Ferris Nicolaisen
    #### SPECIFY EMAIL IN REPO BECAUSE I HAVE TO DECIDE THERE!
[alias]
    attic = "!f() { git tag attic/$1 $1;git branch -d $1;}; f"
    st = status
    co = checkout
    ci = commit
    b = branch
    pull-stash-rebase = !git stash && git pull --rebase && git stash pop
    pull-svn = pull --rebase
    push-svn = !git pull-svn && git update-ref refs/remotes/$(git branch | grep '^*' | awk '{print $2}') refs/remotes/origin/$(git branch|grep '^*'|awk '{print $2}') && git svn dcommit
    svn-stash-commit = !git stash && git svn dcommit && git stash pop
    svn-stash-rebase = !git stash && git svn rebase && git stash pop
    undo-merge-rebase-instead = !git reset --hard HEAD~1 && git pull --rebase
    logv = log --name-status
    logd = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
    logtree = log --graph --oneline --decorate --all
    showv = show --name-status
    cp = cherry-pick -e
    walk = !git-walk
    inc = whatchanged
    diffc = diff --cached
    email-viaboxx = config user.email 'thomas.nicolaisen@viaboxx.de'
    email-private = config user.email 'tfnico@gmail.com'
[apply]
    whitespace = nowarn
[color]
    ui = auto
[core]
    editor = /usr/bin/vim
    excludesfile = ~/prefs/global-git-ignores
	preloadindex = true
[diff]
    tool = diffmerge
[difftool]
    prompt = false
[difftool "diffmerge"]
    cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = diffmerge
[mergetool]
    keepBackup = false
[mergetool "diffmerge"]
    cmd = diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
    trustexitcode = true
[svn]
    rmdir = true
[push]
    default = tracking
[web]
    browser = open
[pager]
    stash = false
[status]
	relativePaths = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[credential]
	helper = osxkeychain
[rebase]
    autosquash = true
	autoStash = true
[pull]
	rebase = true

